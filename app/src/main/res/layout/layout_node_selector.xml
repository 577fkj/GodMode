<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="left"
    android:tag="@string/tag_gm_cmp">

    <LinearLayout
        android:id="@+id/topcentent"
        android:layout_width="wrap_content"
        android:layout_height="393dp"
        android:layout_gravity="center|right|center_horizontal"
        android:background="@android:color/transparent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:tag="@string/tag_gm_cmp">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="380dp"
            android:layout_gravity="right"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/rounded_bg_full"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:tag="@string/tag_gm_cmp"
            android:translationZ="9dp"
            tools:gravity="right">

            <FrameLayout
                android:id="@+id/slider_frame"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:tag="@string/tag_gm_cmp">

                <SeekBar
                    android:id="@+id/slider"
                    android:layout_width="160dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:layoutDirection="rtl"
                    android:rotation="90"
                    android:tag="@string/tag_gm_cmp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@drawable/rounded_bg_bottom_background"
                android:tag="@string/tag_gm_cmp">

                <ImageButton
                    android:id="@+id/block"
                    android:layout_width="48dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ripple_drawable_20dp"
                    android:contentDescription="@string/accessibility_block"
                    android:src="@drawable/ic_block"
                    android:tag="@string/tag_gm_cmp" />

            </FrameLayout>

            <ImageButton
                android:id="@+id/exchange"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/ripple_drawable_20dp"
                android:contentDescription="@string/accessibility_block"
                android:src="@drawable/exchange"
                android:tag="@string/tag_gm_cmp" />

            <ImageButton
                android:id="@+id/Up"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/ripple_drawable_20dp"
                android:contentDescription="@string/accessibility_block"
                android:src="@drawable/up"
                android:tag="@string/tag_gm_cmp" />

            <ImageButton
                android:id="@+id/Down"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/ripple_drawable_20dp"
                android:contentDescription="@string/accessibility_block"
                android:src="@drawable/down"
                android:tag="@string/tag_gm_cmp" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
